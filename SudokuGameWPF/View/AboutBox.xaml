<Window x:Class="SudokuGameWPF.View.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Sudoku Game WPF"
        Height="250"
        Width="350"
        WindowStartupLocation="CenterOwner" 
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </Window.Resources>


    <StackPanel>
        <TextBlock FontSize="24"
                   Padding="10"
                   Text="Sudoku Game WPF" />
        <TextBlock Text="Written by Duong Hoang Kha" />
        <TextBlock Text="Copyright (c) 2022 Duong Hoang Kha" />
        <TextBlock TextWrapping="Wrap"  
                   Margin="10"
                   Text="This software is remade based on Sudoku WPF by Han Hung" />

        <Button Content="OK"
                Width="75"
                Margin="10"
                Click="OKButton_Click" />
    </StackPanel>
</Window>
