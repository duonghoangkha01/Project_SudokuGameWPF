        <Canvas x:Name="CanvasContinueGame" Margin="0" Height="719" Width="430" Visibility="Hidden">
            <Button Style="{StaticResource ButtonContinue}" Click="btnContinue_Click"></Button>
        </Canvas>

        <Canvas x:Name="CanvasChoiceLevel" Margin="0 419 0 0" Height="300" Width="430" Background="White" Visibility="Hidden" >
            <StackPanel>
                <TextBlock Style="{StaticResource TextBlockLevel}" >Choose the level you want to play</TextBlock>
                <Button Style="{StaticResource ButtonLevel}" Click="btnStartVeryEasy_Click">Very Easy</Button>
                <Button Style="{StaticResource ButtonLevel}" Click="btnStartEasy_Click">Easy</Button>
                <Button Style="{StaticResource ButtonLevel}" Click="btnStartMedium_Click">Medium</Button>
                <Button Style="{StaticResource ButtonLevel}" Click="btnStartHard_Click">Hard</Button>
                <Button Style="{StaticResource ButtonLevel}" Click="btnStartExpert_Click">Expert</Button>
            </StackPanel>
            <Canvas.Style>
                <Style TargetType="Canvas">
                    <Style.Triggers>
                        <Trigger Property="Visibility" Value="Visible">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" BeginTime="00:00:00">
                                            <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0, 719, 0, 0" />
                                            <SplineThicknessKeyFrame KeyTime="00:00:0.3" Value="0, 419, 0, 0" />
                                        </ThicknessAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Canvas.Style>
        </Canvas>
    </Canvas>
</Window>
